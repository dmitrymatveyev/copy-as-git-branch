{
  "manifest_version": 2,
  "name": "Copy as Git Branch",
  "version": "1.0",
  "description": "Copy selected text as a Git branch name",
  
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "activeTab"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}